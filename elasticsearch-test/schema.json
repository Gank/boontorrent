{
  "settings": {
    "analysis": {
      "analyzer": {
        "torrent_name_analyzer": {
          "char_filter": "torrent_char_filter",
          "tokenizer": "standard",
          "filter": ["lowercase"]
        }
      }, 
      "char_filter": {
        "torrent_char_filter": {
          "type": "mapping",
          "mappings": [
            ". => \\u0020"
          ]
        }
      }
    }
  },
  "mappings": {
    "_doc": {
      "properties": {
        "name": { 
          "type": "text",
          "analyzer": "torrent_name_analyzer"
        }
      }
    }
  }
}